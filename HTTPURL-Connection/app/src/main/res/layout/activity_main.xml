<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersData"
        android:hint="usersData"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGetData"
        android:onClick="getHttpURLConnectionData"
        android:text="Get Users"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="postHttpURLConnectionData"
        android:text="Login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useVolleyBtn"
        android:onClick="useVolleyGET"
        android:text="Use Volley GET"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useVolleyPOSTBtn"
        android:onClick="useVolleyPOST"
        android:text="Use Volley POST"/>


</LinearLayout>