<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Themes" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>


        <item name="materialButtonStyle">@style/Widget.MyApp.MaterialButton</item>

        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ThemeApp.MediumComponent
        </item>

        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView.differentEdges" parent="">
       <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView.Diamond" parent="">
        <item name="cornerSizeTopLeft">150dp</item>
        <item name="cornerSizeTopRight">150dp</item>
        <item name="cornerSizeBottomLeft">150dp</item>
        <item name="cornerSizeBottomRight">150dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <!--    for overall material card component style-->
    <style name="Widget.MyApp.MaterialCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">80dp</item>
        <item name="cornerSizeBottomRight">80dp</item>

    </style>

    <style name="ShapeAppearance.ThemeApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">40dp</item>

    </style>


    <!-- for all components inside app-->
    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

<!--    like on cards-->

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>




    <!--    for material button style-->
    <style name="Widget.MyApp.MaterialButton" parent="Widget.Material3.Button">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>

    </style>

    <!-- for indivuidal material card override-->



</resources>