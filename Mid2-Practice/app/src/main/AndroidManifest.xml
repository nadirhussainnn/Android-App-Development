        android:supportsRtl="true"
        android:theme="@style/Theme.Mid2Practice">
        <activity android:name=".DatabaseActivity"></activity>
        <activity android:name=".ContextualActionModeActivity" />
        <activity android:name=".FloatingContextMenu" />
        <activity android:name=".OptionsMenuActivity" />
        <activity android:name=".MediaPlayerActivity" />
